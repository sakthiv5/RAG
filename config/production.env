# Production Environment Configuration
# Copy this file to .env and update with your actual values

# Required - OpenAI API Configuration
OPENAI_API_KEY=sk-your-production-api-key-here

# Flask Application Configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=false
FLASK_SECRET_KEY=your-secure-production-secret-key-change-this

# Milvus Vector Database Configuration
MILVUS_HOST=localhost
MILVUS_PORT=19530

# MinIO Object Storage Configuration (for Milvus)
MINIO_USERNAME=minioadmin
MINIO_PASSWORD=your-secure-minio-password-change-this

# Application Settings
LOG_LEVEL=WARNING
DATA_DIR=data
CONFIG_DIR=config

# Performance Settings
FLASK_THREADED=true
FLASK_PROCESSES=1

# Security Settings (Production)
# Uncomment and configure for production deployment
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/key.pem
# TRUSTED_HOSTS=yourdomain.com,www.yourdomain.com

# Monitoring and Logging (Production)
# LOG_FILE=/var/log/rag-system/app.log
# METRICS_ENABLED=true
# HEALTH_CHECK_INTERVAL=30